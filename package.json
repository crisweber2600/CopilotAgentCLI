{
  "name": "copilot-cli",
  "version": "0.32.0",
  "description": "Standalone GitHub Copilot CLI",
  "license": "SEE LICENSE IN ../LICENSE.txt",
  "private": false,
  "type": "commonjs",
  "bin": {
    "copilot-cli": "./dist/cli/index.js"
  },
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "clean": "rm -rf dist",
    "cli": "node dist/cli/index.js",
    "test": "vitest",
    "test:run": "VITEST_CJS=1 vitest run",
    "lint": "eslint --max-warnings=0 \"{src,tests}/**/*.ts\"",
    "format": "prettier --write \"{src,tests,specs,docs}/**/*.{ts,md,json}\"",
    "check:schema": "node scripts/check-schemas.mjs",
    "speckit:sync": "node scripts/sync-speckit-artifacts.mjs",
    "prepare": "npm run build",
    "package": "npm run clean && npm run build && npm pack"
  },
  "dependencies": {
    "ajv": "^8.17.1",
    "open": "^10.1.2",
    "yaml": "^2.6.0"
  },
  "files": [
    "dist",
    "scripts/sync-speckit-artifacts.mjs",
    "scripts/check-schemas.mjs",
    "specs",
    "artifacts",
    "docs",
    ".github/workflows",
    "README.md",
    "LICENSE"
  ],
  "devDependencies": {
    "@types/node": "^22.16.3",
    "@typescript-eslint/eslint-plugin": "^8.13.0",
    "@typescript-eslint/parser": "^8.13.0",
    "eslint": "^9.17.0",
    "globals": "^16.4.0",
    "lint-staged": "^15.2.10",
    "prettier": "^3.4.2",
    "ts-node": "^10.9.2",
    "tsx": "^4.19.2",
    "typescript": "^5.8.3",
    "vitest": "^2.1.4"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix --max-warnings=0",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  }
}
